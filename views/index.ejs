  <div class="panel">
    <h1>Minecraft Bot YÃ¶netim Paneli</h1>

    <div class="form-container">
      <h2>Yeni Bot OluÅŸtur</h2>
      <form method="POST" action="/bot-olustur">
        <input name="kullaniciAdi" placeholder="KullanÄ±cÄ± AdÄ±" required />
        <input name="sunucuIP" placeholder="Sunucu IP (Ã¶rn. mc.sunucu.com)" required />
        <input name="port" placeholder="Port (Ã¶rn. 25565)" required />
        <input name="versiyon" placeholder="Minecraft Versiyon (Ã¶rn. 1.20.4)" required />
        <button type="submit">Bot OluÅŸtur</button>
      </form>
    </div>

    <div class="bot-list">
      <h2>BotlarÄ±nÄ±z</h2>
      <% if (botlar.length === 0) { %>
        <p>HenÃ¼z bot oluÅŸturulmadÄ±.</p>
      <% } else { %>
        <% botlar.forEach(bot => { %>
          <div class="bot-item">
            <a href="/bot/<%= bot.id %>"><%= bot.kullaniciAdi %> â€” <%= bot.durum %></a>
            <form method="POST" action="/bot/<%= bot.id %>/durdur">
              <button type="submit">Durdur</button>
            </form>
          </div>
        <% }) %>
      <% } %>
    </div>

  </div>

  <script>
    function toggleTheme() {
      const body = document.body;
      const isDark = body.classList.toggle('dark-mode');
      body.classList.toggle('light-mode', !isDark);
      localStorage.setItem('theme', isDark ? 'dark' : 'light');
    }

    window.addEventListener('DOMContentLoaded', () => {
      const theme = localStorage.getItem('theme') || 'light';
      document.body.classList.add(theme + '-mode');
    });
  </script>
</body>
</html>
